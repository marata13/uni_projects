
@{
    ViewData["Title"] = "Search";
}

<h1>Search</h1>

<form asp-action="Search">
    <div class="form-group">
                <label class="control-label">Search by name</label>
                <input type="text" class="form-control" id="str" name="str" />
    </div>
    <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
    </div>
</form>
<form asp-action="Search">
    <div class="form-group">
                <label class="control-label">Search by date</label>
                <input type="datetime-local" class="form-control" id="str" name="str" />
    </div>
    <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
    </div>
</form>

@if (ViewBag.Fail != null && ViewBag.Fail)
{
    <script type="text/javascript" >
        window.onload = function () {
        alert('Please enter a valid name');
        }
    </script>
}